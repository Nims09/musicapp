<h1>Listing Stocks</h1>
<%= link_to 'New Stock', new_stock_path, :class=>"btn btn-primary" %>
<table class = "table table-striped" >  
  <thead>  
    <tr>
      <th>Stock</th>
      <th>Hashtag</th>
    </tr>
  </thead>
  <tbody> 
    <% @stocks.each do |stock| %>
        <tr>
          <td><%= stock.name %></td>
          <td><%= stock.hashtag %></td>
          <td><%= link_to 'Show', stock_path(stock), :class=>"btn btn-default" %></td>
          <td><%= link_to 'Edit', edit_stock_path(stock), :class=>"btn btn-default"  %></td>
          <td><%= link_to 'Destroy', 
                  stock_path(stock), 
                  method: :delete, 
                  data: { confirm: 'Are you sure?' }, 
                  :class => 'btn btn-warning'
                  %></td>
        </tr>
    <% end %>
  </tbody>  
</table>
